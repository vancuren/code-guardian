{
  "name": "pentari",
  "displayName": "Pentari - Your security assistant",
  "description": "Real-time GPT-5 powered vulnerability detection and remediation for VS Code and Cursor.",
  "version": "1.0.8",
  "author": "Russell Van Curen",
  "repository": {
    "type": "git",
    "url": "https://github.com/vancuren/pentari"
  },
  "publisher": "Russell Van Curen",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:pentari.scanFile",
    "onCommand:pentari.scanWorkspace",
    "onView:pentari.chat"
  ],
  "browser": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "pentari.scanFile",
        "title": "Pentari: Scan Current File",
        "icon": "$(file-code)"
      },
      {
        "command": "pentari.scanWorkspace",
        "title": "Pentari: Scan Workspace",
        "icon": "$(file-directory)"
      },
      {
        "command": "pentari.applyFix",
        "title": "Pentari: Apply Fix",
        "icon": "$(check)"
      },
      {
        "command": "pentari.showPanel",
        "title": "Pentari: Show Security Panel",
        "icon": "$(shield)"
      },
      {
        "command": "pentari.showTerminal",
        "title": "Pentari: Show Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "pentari.fixVulnerability",
        "title": "Pentari: Fix Vulnerability",
        "icon": "$(check)"
      },
      {
        "command": "pentari.setApiKey",
        "title": "Pentari: Set API Key",
        "category": "Pentari"
      }
    ],
    "configuration": {
      "title": "Pentari",
      "properties": {
        "pentari.aiProvider": {
          "type": "string",
          "default": "openai",
          "enum": ["openai", "anthropic", "local"],
          "description": "AI provider for vulnerability analysis"
        },
        "pentari.model": {
          "type": "string",
          "default": "gpt-5-nano",
          "enum": [
            "gpt-5",
            "gpt-5-nano",
            "gpt-5-mini",
            "gpt-5-codex",
            "claude-sonnet-4-5-20250929",
            "claude-sonnet-4-20250514",
            "claude-3-7-sonnet-20250219",
            "claude-opus-4-1-20250805",
            "claude-opus-4-20250514",
            "claude-3-5-haiku-latest",
            "claude-3-haiku-20240307"
          ],
          "description": "Model used for AI analysis and fixes"
        },
        "pentari.autoScan": {
          "type": "boolean",
          "default": false,
          "description": "Automatically scan files on save"
        },
        "pentari.allowedLanguages": {
          "type": "array",
          "default": [],
          "description": "Only analyze documents whose language identifier is listed here (leave empty to allow all text languages)",
          "items": {
            "type": "string"
          }
        },
        "pentari.blockedLanguages": {
          "type": "array",
          "default": [],
          "description": "Skip analysis for documents whose language identifier matches any entry",
          "items": {
            "type": "string"
          }
        },
        "pentari.fileIncludeGlobs": {
          "type": "array",
          "default": [],
          "markdownDescription": "Glob patterns that must match a document path before it is analyzed. Leave empty to allow all files. Patterns use the same syntax as `files.exclude` (e.g. `**/*.{ts,js}`).",
          "items": {
            "type": "string"
          }
        },
        "pentari.fileExcludeGlobs": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**"
          ],
          "markdownDescription": "Glob patterns that will be ignored during automatic scans and workspace scans. Patterns use the same syntax as `files.exclude`.",
          "items": {
            "type": "string"
          }
        },
        "pentari.severityThreshold": {
          "type": "string",
          "default": "low",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Minimum severity level to report"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "pentari",
          "title": "Pentari",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "pentari": [
        {
          "id": "pentari.vulnerabilities",
          "name": "Vulnerabilities"
        },
        {
          "id": "pentari.suggestions",
          "name": "Fix Suggestions"
        },
        {
          "id": "pentari.chat",
          "name": "Chat",
          "type": "webview"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "pentari.scanWorkspace",
          "when": "view == pentari.vulnerabilities",
          "group": "navigation@1"
        },
        {
          "command": "pentari.scanFile",
          "when": "view == pentari.vulnerabilities",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "pentari.fixVulnerability",
          "when": "viewItem == pentari.vulnerability",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package-vsix": "vsce package --allow-missing-repository",
    "test": "jest"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.x",
    "typescript": "^5.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "openai": "^4.20.0",
    "vm2": "^3.9.19",
    "semver": "^7.5.4",
    "eslint": "^8.54.0",
    "@typescript-eslint/parser": "^6.13.0",
    "path-browserify": "^1.0.1",
    "crypto-browserify": "^3.12.0",
    "stream-browserify": "^3.0.0",
    "buffer": "^6.0.3",
    "util": "^0.12.5",
    "process": "^0.11.10",
    "minimatch": "^9.0.3"
  }
}
