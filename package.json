{
  "name": "code-guardian",
  "displayName": "CodeGuardian - Your security assistant",
  "description": "Real-time OpenAI powered vulnerability detection and remediation for Codex. Cursor only for now.",
  "version": "1.0.2",
  "publisher": "code-guardian",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Linters",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:codeGuardian.scanFile",
    "onCommand:codeGuardian.scanWorkspace"
  ],
  "browser": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeGuardian.scanFile",
        "title": "Code Guardian: Scan Current File",
        "icon": "$(file-code)"
      },
      {
        "command": "codeGuardian.scanWorkspace",
        "title": "Code Guardian: Scan Workspace",
        "icon": "$(file-directory)"
      },
      {
        "command": "codeGuardian.applyFix",
        "title": "Code Guardian: Apply Fix",
        "icon": "$(check)"
      },
      {
        "command": "codeGuardian.showPanel",
        "title": "Code Guardian: Show Security Panel",
        "icon": "$(shield)"
      },
      {
        "command": "codeGuardian.showTerminal",
        "title": "Code Guardian: Show Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "codeGuardian.fixVulnerability",
        "title": "Code Guardian: Fix Vulnerability",
        "icon": "$(check)"
      }
    ],
    "configuration": {
      "title": "Code Guardian",
      "properties": {
        "codeGuardian.aiProvider": {
          "type": "string",
          "default": "openai",
          "enum": ["openai", "local"],
          "description": "AI provider for vulnerability analysis"
        },
        "codeGuardian.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for AI provider"
        },
        "codeGuardian.autoScan": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan files on save"
        },
        "codeGuardian.allowedLanguages": {
          "type": "array",
          "default": [],
          "description": "Only analyze documents whose language identifier is listed here (leave empty to allow all text languages)",
          "items": {
            "type": "string"
          }
        },
        "codeGuardian.blockedLanguages": {
          "type": "array",
          "default": [],
          "description": "Skip analysis for documents whose language identifier matches any entry",
          "items": {
            "type": "string"
          }
        },
        "codeGuardian.fileIncludeGlobs": {
          "type": "array",
          "default": [],
          "markdownDescription": "Glob patterns that must match a document path before it is analyzed. Leave empty to allow all files. Patterns use the same syntax as `files.exclude` (e.g. `**/*.{ts,js}`).",
          "items": {
            "type": "string"
          }
        },
        "codeGuardian.fileExcludeGlobs": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**"
          ],
          "markdownDescription": "Glob patterns that will be ignored during automatic scans and workspace scans. Patterns use the same syntax as `files.exclude`.",
          "items": {
            "type": "string"
          }
        },
        "codeGuardian.severityThreshold": {
          "type": "string",
          "default": "low",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Minimum severity level to report"
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "code-guardian",
          "title": "Code Guardian",
          "icon": "$(shield)"
        }
      ]
    },
    "views": {
      "code-guardian": [
        {
          "id": "codeGuardian.vulnerabilities",
          "name": "Vulnerabilities"
        },
        {
          "id": "codeGuardian.suggestions",
          "name": "Fix Suggestions"
        },
        {
          "id": "codeGuardian.terminal",
          "name": "Terminal"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "codeGuardian.scanWorkspace",
          "when": "view == codeGuardian.vulnerabilities",
          "group": "navigation@1"
        },
        {
          "command": "codeGuardian.scanFile",
          "when": "view == codeGuardian.vulnerabilities",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "codeGuardian.fixVulnerability",
          "when": "viewItem == codeGuardian.vulnerability",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "package-vsix": "vsce package --allow-missing-repository",
    "test": "jest"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.x",
    "typescript": "^5.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4",
    "ts-loader": "^9.5.1",
    "jest": "^29.7.0"
  },
  "dependencies": {
    "openai": "^4.20.0",
    "@anthropic-ai/sdk": "^0.10.0",
    "vm2": "^3.9.19",
    "semver": "^7.5.4",
    "eslint": "^8.54.0",
    "@typescript-eslint/parser": "^6.13.0",
    "path-browserify": "^1.0.1",
    "crypto-browserify": "^3.12.0",
    "stream-browserify": "^3.0.0",
    "buffer": "^6.0.3",
    "util": "^0.12.5",
    "process": "^0.11.10",
    "minimatch": "^9.0.3"
  }
}
